@model ApiCursos.models.AlunoModel;
{
    ViewData["Title"] = "Editar";
    }

    <div class = "textcenter"
<div class="d-grid gap-2 d-md-flex justfy-content-md-start">
    <a class="btn btn-primary" role="button"> Editar></a>
<br />
    <h1 class="display-4">Editar</h1>
</div>
<form asp-controller="Aluno" asp-action="Editar" method="post">
    <input type="hidden" asp-formaction="RA"/>
    <div class="form-group">
        <input type="text" aspfor="Name" class="form-control" placeholder="Nome completo">
        @Html.ValidationMessageFor(x => x.Name)
        <label form="nome">Nome</label>
    </div>
    <div class="form-group">
        <input type="text" aspfor="RA" class="form-control" placeholder="RA">
        @Html.ValidationMessageFor(x => x.RA)
        <label for="ra">RA</label>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn-secundary btn-block" asp-controller="Aluno" asp-action="AlunoIndex" role="button">Voltar></a>
</form>
}
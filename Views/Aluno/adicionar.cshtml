@model ApiCursos.models.AlunoModel
{
    ViewData["Title"] = "Adicionar Alunos";

    }
<div class = "textcenter"

<div class="d-grid gap-2 d-md-flex justfy-content-md-start">
    <a class="btn btn-primary" role="button"> Adicionar novo aluno></a>
<br />
    <h1 class="display-4">Adicionar Alunos</h1>
</div>
<form asp-controller="Aluno" asp-action="AdicionarAluno" method="post">
    <div class="form-group">
        <input type="text" asp-for="Name" class="form-control" placeholder="Nome completo">
        @Html.ValidationMessageFor(x => x.Name)
        <label form="nome">Nome</label>
    </div>
    <div class="form-group">
        <input type="text" asp-for="RA" class="form-control" placeholder="RA">
        @Html.ValidationMessageFor(x => x.RA)
        <label for="ra">RA</label>
    </div>
    using ApiCursos.models;

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn-secundary btn-block" asp-controller="Aluno" asp-action="AlunoIndex" role="button">Voltar></a>
</form>
}
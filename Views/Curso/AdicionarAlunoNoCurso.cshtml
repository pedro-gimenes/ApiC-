@model ApiCursos.models.CursoModels;
{
    ViewData["Title"] = "Adicionar aluno no Curso";

    }
<div class = "textcenter"

<div class="d-grid gap-2 d-md-flex justfy-content-md-start">
    <a class="btn btn-primary" role="button"> Adicionar aluno no curso></a>
<br />
    <h1 class="display-4">Adicionar aluno no Curso</h1>
</div>
<form asp-controller="Curso" asp-action="AdicionarAlunoCurso" method="post">
    <div class="form-group">
        <input type="text" asp-for="NomeDoCurso" class="form-control" placeholder="Nome do aluno no curso">
        @Html.ValidationMessageFor(x => x.NomeDoCurso)
        <label form="nome">Nome</label>
    </div>
    <div class="form-group">
        <input type="text" asp-for="Id" class="form-control" placeholder="Id">
        @Html.ValidationMessageFor(x => x.Id)
        <label for="Id">RA</label>
    </div>
    using ApiCursos.models;

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn-secundary btn-block" asp-controller="Curso" asp-action="Index" role="button">Voltar></a>
</form>
}